{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "global.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@rich/core": ["./packages/core"],
      "@rich/form": ["./packages/form"],
      "@rich/http": ["./packages/http"],
      "@rich/layout": ["./packages/layout"],
      "@rich/table": ["./packages/table"],
      "@rich/utils": ["./packages/utils"]
    }
  }
}
